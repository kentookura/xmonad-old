       , persistent       = True    -- enable/disable hiding (True = disabled)
       , commands         = 
            [ Run Weather "LOWW" [ "--template", "<skyCondition> | <fc=#4682B4><tempC></fc>Â°C | <fc=#4682B4><rh></fc>% "
                                 ] 36000
            , Run Battery        [ "--template" , " <acstatus>"
                                 , "--Low"      , "10"        -- units: %
                                 , "--High"     , "80"        -- units: %
                                 , "--low"      , "#9d0006"
                                 , "--normal"   , "#d79921"
                                 , "--high"     , "#79740e"
                                 , "--" -- battery specific options
                                           -- discharging status
                                           , "-o"	, "<left>% (<timeleft>)"
